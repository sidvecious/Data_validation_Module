{
    "soil_data_harmonization": {
        "constraints": [
            {
                "name": "input",
                "rules": {
                    "valid_input": [
                        {
                            "table_name": "input_file",
                            "validation": [
                                "first_parents_is_valid_Path"
                            ]
                        }
                    ],
                    "valid_output_directory": [
                        {
                            "table_name": "output_directory",
                            "validation": [
                                "is_valid_Path"
                            ]
                        }
                    ]
                }
            },
            {
                "name": "date",
                "rules": {
                    "valid_date": [
                        {
                            "table_name": "date_col",
                            "validation": [
                                "is_type_string"
                            ]
                        }
                    ]
                }
            },
            {
                "name": "geom",
                "rules": {
                    "valid_geoms": [
                        {
                            "table_name": "geoms_col",
                            "validation": [
                                "is_type_string"
                            ]
                        }
                    ],
                    "valid_lat_and_lon": [
                        {
                            "table_name": "lat_col",
                            "validation": [
                                "is_type_string"
                            ]
                        },
                        {
                            "table_name": "lon_col",
                            "validation": [
                                "is_type_string"
                            ]
                        }
                    ]
                }
            },
            {
                "name": "depth",
                "rules": {
                    "valid_depth": [
                        {
                            "table_name": "depth_id_col",
                            "validation": [
                                "is_type_string"
                            ]
                        }
                    ],
                    "valid_top_bottom_cols": [
                        {
                            "table_name": "bottom_col",
                            "validation": [
                                "is_type_string"
                            ]
                        },
                        {
                            "table_name": "top_col",
                            "validation": [
                                "is_type_string"
                            ]
                        }
                    ]
                }
            },
            {
                "name": "errors",
                "rules": {
                    "valid_accuracy": [
                        {
                            "table_name": "geom_error_m",
                            "validation": [
                                "is_greater_zero_or_null"
                            ]
                        },
                        {
                            "table_name": "date_error_d",
                            "validation": [
                                "is_greater_zero_or_null"
                            ]
                        },
                        {
                            "table_name": "depth_error_mm",
                            "validation": [
                                "is_greater_zero_or_null"
                            ]
                        }
                    ]
                }
            }
        ]
    }
}
